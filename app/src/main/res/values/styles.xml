<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/recursive</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">#000</item>
        <item name="colorControlNormal">#000</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomNav">
        <item name="colorPrimary">#1565C0</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FabStyle">
        <item name="colorAccent">@color/fabColor</item>
        <item name="rippleColor">@color/disabledColor</item>
    </style>

    <style name="AppbarText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>